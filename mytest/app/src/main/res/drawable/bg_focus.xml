<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="5px"
                android:color="#98F8FF" />
            <corners android:radius="5px"/>
        </shape>
    </item>

    <item
        android:bottom="4px"
        android:left="4px"
        android:right="4px"
        android:top="4px">
        <shape android:shape="rectangle">
            <stroke
                android:width="5px"
                android:color="#98F8FF" />
            <corners android:radius="15px"/>
        </shape>
    </item>
</layer-list>